{
  "buildCommand": "npm ci --legacy-peer-deps && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci --legacy-peer-deps",
  "framework": "vite",
  "functions": {
    "api/og-image.js": {
      "runtime": "@edge"
    },
    "api/og/[...params].js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
